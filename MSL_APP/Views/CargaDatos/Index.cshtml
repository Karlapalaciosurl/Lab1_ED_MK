@using MSL_APP.Utils;
@{
    ViewData["Title"] = "Data Loader";
}

<h1 class="header center orange-text">Carga de datos a @Storage.Instance.tipoLista</h1>
<div class="row center">
    <h5 class="header col s12 light">Seleccionar la forma de introducir los datos.</h5>

</div>

<div class="input-field col s12">
    <form action="@Url.Action("Index", "CargaDatos")" method="post">
        <select required name="tipoCarga">
            <option value="" disabled selected>Seleccionar la forma</option>
            <option value="carga manual">carga manual</option>
            <option value="carga por archivo">carga por archivo</option>
        </select>

        <button class="btn waves-effect waves-light center" type="submit" name="action">
            Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>


